<h1>Listing books</h1>

<table>
  <tr>
    <th></th>
    <th>Title/Author</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= image_tag(book.image.path) unless (book.image == nil) %></td>
    <td>
      <%= book.title %><br />
      <%= book.author %>
    </td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

