<h1>Listing reviews</h1>

<table>
  <tr>
    <th>Book</th>
    <th>User</th>
    <th>Stars</th>
    <th colspan="3">操作</th>
  </tr>

<% @reviews.each do |review| %>
  <tr onclick="$('#description<%= review.id %>').toggle();">
    <td><%= review.book.title %></td>
    <td><%= review.user.name %></td>
    <td><% i = 0 %>
        <% while( i < 10 ) %>
          <% if( i < review.stars ) %>
            <%= "★" %>
          <% else %>
            <%= "☆" %>
          <% end %>
          <% i += 1 %>
        <% end %>
    </td>
    <td><%= link_to 'Show', review %></td>
    <td><%= link_to 'Edit', edit_review_path(review) %></td>
    <td><%= link_to 'Destroy', review, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
  <tr id="description<%= review.id %>" style="display: none;">
    <td colspan="6"><%= review.description %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Review', new_review_path %>
